/* miniprogram/pages/class-chat/class-chat.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.search-bar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
}

.l-search-bar {
    width: 630rpx;
    position: relative;
    margin-top: 5rpx;
    /* margin-left: -40rpx; */
}

.hr {
    margin-top: 30rpx;
    width: 100%;
    height: 1px;
    background-color: #d9d9d9;
}

.all-classes-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -15rpx;
}

.index-list {
    position: relative;
    /* margin-left: -40rpx; */
    width: 630rpx;
}

.l-sidebar {
    position: relative;
    margin-top: 40rpx;
    margin-right: -10rpx;
    height: 1000rpx;
}

.l-selected {
    background-color: #EE2C2C !important;
}

.class-group-container {
    background-color: #fafafa;
    border-radius: 15px;
    padding: 20rpx;
    margin-top: 30rpx;
}

.l-index-anchor {
    font-weight: bold;
    font-size: 36rpx;
}

.class-group {
    margin-top: -10rpx;
    margin-left: -11rpx;
}

.search-result-container {
    margin-top: 15rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 15px;
    width: 630rpx;
    background-color: #fafafa;
    padding-bottom: 20rpx;
}