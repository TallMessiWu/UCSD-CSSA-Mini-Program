.container {
    background-color: white;
    border-radius: 15px;
    width: 700rpx;
    margin-top: 20rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.title-container{
    display: flex;
    flex-direction: row;
    justify-items: center;
    align-items: center;
}

.title {
    text-align: center;
    font-weight: 600;
    font-size: 40rpx;
}

.hr {
    margin-top: 16rpx;
    width: 100%;
    height: 1px;
    background-color: #d9d9d9;
}

.content-container {
    display: flex;
    flex-direction: row;
    width: 650rpx;
    margin-top: 20rpx;
    height: 260rpx;
}

.thumbnail {
    width: 300rpx;
    height: 260rpx;
    margin-right: 20rpx;
}

.summary-container{
    width: 400rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
    text-overflow: ellipsis;
}

.summary {
    color: gray;
    line-height: 50rpx;
    /* font-size: 32rpx; */
}
