.container {
    background-color: white;
    border-radius: 15px;
    width: 700rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.thumbnail{
    width: 100%;
    height: 300rpx;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

.text-container {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 30rpx 20rpx 30rpx;
}

.title {
    display: block;
    font-size: 32rpx;
    margin-bottom: 10rpx;
}

.summary {
    display: block;
    font-weight: 300;
    font-size: 28rpx;
}